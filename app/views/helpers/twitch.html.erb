<% if @twitch_data.online %>
  <h2><%= @twitch_data.status %></h2>
  <object type="application/x-shockwave-flash" height="400" width="620" id="live_embed_player_flash" data="<%= @twitch_data.video_url %>" bgcolor="#000000">
    <param name="allowFullScreen" value="true" />
    <param name="allowScriptAccess" value="always" />
    <param name="allowNetworking" value="all" />
    <param name="movie" value="http://www.twitch.tv/widgets/live_embed_player.swf" />
    <param name="flashvars" value="hostname=www.twitch.tv&channel=<%= @twitch_data.username %>&auto_play=true&start_volume=25" />
  </object>

  <iframe frameborder="0" scrolling="no" id="chat_embed" src="<%= @twitch_data.chat_url %>" height="400" width="300">
  </iframe>
<% else %>
  <h1 class="text-center">OFFLINE</h1>
<% end -%>